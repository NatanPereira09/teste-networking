generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Intent {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  company   String?
  message   String?
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
}

model Invitation {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  email     String
  name      String
  company   String?
  status    String   @default("ACTIVE")
  createdAt DateTime @default(now())
}

model Member {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String?
  company   String?
  createdAt DateTime @default(now())
}
